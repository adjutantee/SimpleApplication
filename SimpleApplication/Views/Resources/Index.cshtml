@model IEnumerable<Application.DTO.ResourceDto>
@{
    ViewData["Title"] = "Список ресурсов";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="display-6">@ViewData["Title"]</h1>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Добавить ресурс
        </a>
        <a asp-action="Archive" class="btn btn-outline-secondary">
            <i class="bi bi-archive"></i> Архив
        </a>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>ID</th>
                            <th>Наименование</th>
                            <th>Состояние</th>
                            <th>Действия</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Id</td>
                                <td>@item.Name</td>
                                <td><span class="badge bg-@(item.State == "Active" ? "success" : "secondary")">@item.State</span></td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">
                                            <i class="bi bi-pencil"></i> Редактировать
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">
                                            <i class="bi bi-trash"></i> Удалить
                                        </a>
                                        <form asp-action="Archive" asp-route-id="@item.Id" method="post" class="d-inline">
                                            <button type="submit" class="btn btn-sm btn-outline-warning">
                                                <i class="bi bi-archive"></i> Архивировать
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>