@model Application.DTO.ResourceDto
@{
    ViewData["Title"] = ViewContext.RouteData.Values["action"].ToString() == "Create"
        ? "Добавить ресурс" : "Редактировать ресурс";
}

<div class="container mt-5">
    <div class="card shadow-sm">
        <div class="card-header bg-light">
            <h5 class="card-title mb-0">@ViewData["Title"]</h5>
        </div>
        <div class="card-body">
            <form asp-action="@ViewContext.RouteData.Values["action"].ToString()">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />

                <div class="mb-3">
                    <label asp-for="Name" class="form-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                @if (ViewContext.RouteData.Values["action"].ToString() == "Edit")
                {
                    <div class="mb-3">
                        <label asp-for="State" class="form-label"></label>
                        <select asp-for="State" class="form-select">
                            <option value="Active">Активный</option>
                            <option value="Archived">Архивный</option>
                        </select>
                        <span asp-validation-for="State" class="text-danger"></span>
                    </div>
                }

                <div class="d-flex justify-content-between mt-4">
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Назад к списку
                    </a>
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-save"></i> Сохранить
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}