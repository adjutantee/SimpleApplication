<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SimpleApplication</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SimpleApplication.styles.css" asp-append-version="true" />
</head>
<body>
    <header class="bg-primary text-white py-3">
        <div class="container">
            <div class="d-flex justify-content-between align-items-center">
                <h1 class="h4 mb-0">Управление складом</h1>
                <nav>
                    <ul class="nav">
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-controller="Resources" asp-action="Index">Ресурсы</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-controller="Units" asp-action="Index">Единицы измерения</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-controller="Receipts" asp-action="Index">Поступления</a>
                        </li>
                    </ul>
                </nav>
            </div>
        </div>
    </header>

    <main role="main" class="pb-3">
        <div class="container py-4">
            @RenderBody()
        </div>
    </main>

    <footer class="bg-light py-4 mt-5">
        <div class="container text-center">
            <p class="mb-0">Система управления складом &copy; @DateTime.Now.Year</p>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
