@model Application.DTO.ReceiptWithItemsDto
@{
    ViewData["Title"] = ViewContext.RouteData.Values["action"].ToString() == "Create"
        ? "Добавить поступление" : "Редактировать поступление";
}

<div class="container mt-5">
    <div class="card shadow-sm">
        <div class="card-header bg-light">
            <h5 class="card-title mb-0">@ViewData["Title"]</h5>
        </div>
        <div class="card-body">
            <form asp-action="@ViewContext.RouteData.Values["action"].ToString()" id="receiptForm">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="row mb-4">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="Receipt.Number" class="form-label"></label>
                            <input asp-for="Receipt.Number" class="form-control" />
                            <span asp-validation-for="Receipt.Number" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="Receipt.Date" class="form-label"></label>
                            <input asp-for="Receipt.Date" type="date" class="form-control" />
                            <span asp-validation-for="Receipt.Date" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <input type="hidden" asp-for="Receipt.Id" />

                <h5 class="mt-4 mb-3">Ресурсы поступления</h5>

                <div id="items-container">
                    @for (var i = 0; i < Model.Items.Count; i++)
                    {
                        <div class="item-row card mb-3">
                            <div class="card-body">
                                <div class="row g-3">
                                    <div class="col-md-5">
                                        <label class="form-label">Ресурс</label>
                                        <select asp-for="Items[i].ResourceId" class="form-select"
                                                asp-items="@(new SelectList(ViewBag.Resources, "Id", "Name"))">
                                            <option value="">-- Выберите ресурс --</option>
                                        </select>
                                        <span asp-validation-for="Items[i].ResourceId" class="text-danger"></span>
                                    </div>
                                    <div class="col-md-3">
                                        <label class="form-label">Единица измерения</label>
                                        <select asp-for="Items[i].UnitId" class="form-select"
                                                asp-items="@(new SelectList(ViewBag.Units, "Id", "Name"))">
                                            <option value="">-- Выберите единицу --</option>
                                        </select>
                                        <span asp-validation-for="Items[i].UnitId" class="text-danger"></span>
                                    </div>
                                    <div class="col-md-3">
                                        <label class="form-label">Количество</label>
                                        <input asp-for="Items[i].Quantity" type="number" step="0.01" class="form-control" />
                                        <span asp-validation-for="Items[i].Quantity" class="text-danger"></span>
                                    </div>
                                    <div class="col-md-1 d-flex align-items-end">
                                        <button type="button" class="btn btn-danger remove-item">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>

                <button type="button" id="add-item" class="btn btn-outline-primary mb-4">
                    <i class="bi bi-plus-circle"></i> Добавить ресурс
                </button>

                <div class="d-flex justify-content-between mt-4">
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Назад к списку
                    </a>
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-save"></i> Сохранить
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        $(document).ready(function() {
            // Добавление новой строки
            $("#add-item").click(function() {
                const index = new Date().getTime(); // Уникальный индекс
                const newRow = `
                    <div class="item-row card mb-3">
                        <div class="card-body">
                            <div class="row g-3">
                                <div class="col-md-5">
                                    <label class="form-label">Ресурс</label>
                                    <select name="Items[${index}].ResourceId" class="form-select">
                                        <option value="">-- Выберите ресурс --</option>
                                        @foreach (var resource in ViewBag.Resources)
                                        {
                                                <option value="@resource.Id">@resource.Name</option>
                                        }
                                    </select>
                                </div>
                                <div class="col-md-3">
                                    <label class="form-label">Единица измерения</label>
                                    <select name="Items[${index}].UnitId" class="form-select">
                                        <option value="">-- Выберите единицу --</option>
                                        @foreach (var unit in ViewBag.Units)
                                        {
                                                <option value="@unit.Id">@unit.Name</option>
                                        }
                                    </select>
                                </div>
                                <div class="col-md-3">
                                    <label class="form-label">Количество</label>
                                    <input name="Items[${index}].Quantity" type="number" step="0.01" class="form-control" />
                                </div>
                                <div class="col-md-1 d-flex align-items-end">
                                    <button type="button" class="btn btn-danger remove-item">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                `;
                $("#items-container").append(newRow);
            });

            // Удаление строки
            $(document).on("click", ".remove-item", function() {
                $(this).closest(".item-row").remove();
            });
        });
    </script>

    <style>
        .item-row {
            transition: all 0.3s ease;
        }
        .remove-item {
            transition: transform 0.2s;
        }
        .remove-item:hover {
            transform: scale(1.1);
        }
    </style>
}