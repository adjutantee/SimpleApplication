@model IEnumerable<Application.DTO.ReceiptWithItemsDto>
@{
    ViewData["Title"] = "Поступления";

    var resourcesDict = (ViewBag.Resources as List<Application.DTO.ResourceDto>)?.ToDictionary(r => r.Id, r => r.Name) ?? new Dictionary<int, string>();
    var unitsDict = (ViewBag.Units as List<Application.DTO.UnitDto>)?.ToDictionary(u => u.Id, u => u.Name) ?? new Dictionary<int, string>();
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="display-6">@ViewData["Title"]</h1>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Добавить поступление
        </a>
    </div>

    <div class="card shadow-sm mb-4">
        <div class="card-header bg-light">
            <h6 class="card-title mb-0">Фильтры</h6>
        </div>
        <div class="card-body">
            <form method="get" class="row g-3">
                <div class="col-md-3">
                    <label class="form-label">Дата с:</label>
                    <input type="date" name="startDate" class="form-control">
                </div>
                <div class="col-md-3">
                    <label class="form-label">Дата по:</label>
                    <input type="date" name="endDate" class="form-control">
                </div>
                <div class="col-md-3">
                    <label class="form-label">Ресурсы:</label>
                    <select class="form-select" multiple name="resourceIds">
                        @foreach (var resource in ViewBag.Resources as List<Application.DTO.ResourceDto>)
                        {
                            <option value="@resource.Id">@resource.Name</option>
                        }
                    </select>
                </div>
                <div class="col-md-3">
                    <label class="form-label">Единицы измерения:</label>
                    <select class="form-select" multiple name="unitIds">
                        @foreach (var unit in ViewBag.Units as List<Application.DTO.UnitDto>)
                        {
                            <option value="@unit.Id">@unit.Name</option>
                        }
                    </select>
                </div>
                <div class="col-12 mt-3">
                    <button type="submit" class="btn btn-primary me-2">
                        <i class="bi bi-funnel"></i> Применить фильтры
                    </button>
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="bi bi-x-circle"></i> Сбросить
                    </a>
                </div>
            </form>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>ID</th>
                            <th>Номер</th>
                            <th>Дата</th>
                            <th>Ресурсы</th>
                            <th>Единицы измерения</th>
                            <th>Количества</th>
                            <th>Действия</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var receipt in Model)
                        {
                            <tr>
                                <td>@receipt.Receipt.Id</td>
                                <td>@receipt.Receipt.Number</td>
                                <td>@receipt.Receipt.Date.ToString("dd.MM.yyyy")</td>
                                <td>
                                    @foreach (var item in receipt.Items)
                                    {
                                        <div>@resourcesDict.GetValueOrDefault(item.ResourceId, "Неизвестный ресурс")</div>
                                    }
                                </td>
                                <td>
                                    @foreach (var item in receipt.Items)
                                    {
                                        <div>@unitsDict.GetValueOrDefault(item.UnitId, "Неизвестная единица")</div>
                                    }
                                </td>
                                <td>
                                    @foreach (var item in receipt.Items)
                                    {
                                        <div>@item.Quantity.ToString("N2")</div>
                                    }
                                </td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a asp-action="Edit" asp-route-id="@receipt.Receipt.Id" class="btn btn-sm btn-outline-primary">
                                            <i class="bi bi-pencil"></i> Редактировать
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@receipt.Receipt.Id" class="btn btn-sm btn-outline-danger">
                                            <i class="bi bi-trash"></i> Удалить
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>